{% extends 'base.html.twig' %}

{% block title %}Booksite
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Booksite</h1>
		<table class="table table-striped table-hover">
			<thead class="thead-dark">
				<tr>
					<th>Title</th>
					<th>Author</th>
					<th>Year</th>
					<th>Genre</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for book in books %}
					<tr>
						<td>{{ book.title }}</td>
						<td>{{ book.author }}</td>
						<td>{{ book.publishingYear }}</td>
						<td>{{ book.genre }}</td>
						<td>{{ book.description }}</td>
						<td>
							<a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm btn-primary">Edit</a>

							<!-- DELETE -->
							<form action="{{ path('book_delete', {'id': book.id}) }}" method="post" onsubmit="return confirm('Are you sure?');" style="display:inline">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
								<input type="hidden" name="_method" value="DELETE">
								<button type="submit" class="btn btn-sm btn-danger">Delete</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('book_new') }}" class="btn btn-success mt-3">Create New Book</a>
	</div>
{% endblock %}
