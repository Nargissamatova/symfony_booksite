{% extends 'base.html.twig' %}

{% block title %}Add New Book
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Add New Book</h1>

		<div class="card">
			<div class="card-body">
				{{ form_start(form) }}

				<div class="mb-3">
					{{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.title) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.author, 'Author', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.author) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.publishingYear, 'Publishing Year', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.publishingYear, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.publishingYear) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.genre, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.genre) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.description) }}
				</div>

				<button class="btn btn-primary">Save</button>
				{{ form_end(form) }}

				<a href="{{ path('book_index') }}" class="btn btn-secondary mt-3">Back to list</a>
			</div>
		</div>
	</div>
{% endblock %}
